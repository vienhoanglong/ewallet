				form.typing-area(action='')
					input.incoming_id(type='text' name='incoming_id' value='' hidden='')
					input#message.input-field(type='text' name='message' placeholder='Nhập nội dung...' autocomplete='off')
					button#send_message
						i.fab.fa-telegram-plane

	
				

