block vars
	-title = 'Chat'
	-bodyClass = ''
block script 

block content
	.content_chat_detail
		.wrapper
			section.chat-area
				.header
					a.back-icon(href='/user/listChat')
						i.fas.fa-arrow-left
					img#avatar(src='/uploads/user1.png' alt='Avatar')
					.details
						input#id_des(type='hidden' value='')
